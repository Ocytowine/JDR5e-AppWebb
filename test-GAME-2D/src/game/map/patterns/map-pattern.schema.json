{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "map-pattern.schema.json",
  "title": "Map Pattern",
  "type": "object",
  "required": ["id", "label", "theme", "footprint", "anchor", "elements"],
  "properties": {
    "id": { "type": "string" },
    "label": { "type": "string" },
    "theme": { "type": "string", "enum": ["dungeon", "forest", "city", "generic"] },
    "tags": { "type": "array", "items": { "type": "string" } },
    "footprint": {
      "type": "object",
      "required": ["w", "h"],
      "properties": {
        "w": { "type": "integer", "minimum": 1 },
        "h": { "type": "integer", "minimum": 1 }
      }
    },
    "anchor": {
      "type": "string",
      "enum": ["center", "topLeft", "topRight", "bottomLeft", "bottomRight"]
    },
    "constraints": {
      "type": "object",
      "properties": {
        "needsClearArea": { "type": "boolean" },
        "avoidBorder": {
          "type": "object",
          "properties": {
            "top": { "type": "integer", "minimum": 0 },
            "bottom": { "type": "integer", "minimum": 0 },
            "left": { "type": "integer", "minimum": 0 },
            "right": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "x", "y"],
        "properties": {
          "type": { "type": "string", "enum": ["obstacle", "decor", "wall", "tile"] },
          "typeId": { "type": "string" },
          "spriteKey": { "type": "string" },
          "x": { "type": "integer" },
          "y": { "type": "integer" },
          "variant": { "type": "string" },
          "rotation": { "type": "integer", "enum": [0, 90, 180, 270] },
          "scale": { "type": "number" },
          "height": { "type": "number" },
          "terrain": { "type": "string" }
        }
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "elements"],
        "properties": {
          "id": { "type": "string" },
          "elements": { "$ref": "#/properties/elements" }
        }
      }
    },
    "wallAscii": {
      "type": "array",
      "items": { "type": "string" }
    },
    "wallDoors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["x", "y", "dir"],
        "properties": {
          "x": { "type": "integer" },
          "y": { "type": "integer" },
          "dir": { "type": "string", "enum": ["N", "E", "S", "W"] },
          "state": { "type": "string", "enum": ["open", "closed"] }
        }
      }
    }
  }
}
