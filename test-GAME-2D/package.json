    "validate:phase1": "node scripts/validate-narration-phase1.js",
    "validate:phase3": "node scripts/validate-narration-phase3.js",
    "validate:phase4": "node scripts/validate-narration-phase4.js && node scripts/validate-narration-phase4-scenarios.js",
    "validate:phase4:scenarios": "node scripts/validate-narration-phase4-scenarios.js",
    "validate:phase7": "node scripts/validate-narration-phase7.js",
    "validate:phase8": "node scripts/validate-narration-phase8.js",
    "validate:phase56": "node scripts/validate-narration-phase56.js"
  },
  "dependencies": {
    "pixi.js": "^8.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
