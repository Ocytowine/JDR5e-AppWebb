  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.0"
  }
